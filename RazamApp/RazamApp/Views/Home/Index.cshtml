@model IEnumerable<RazamApp.Models.Message>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr class="header">
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (RazamApp.Models.Message b in Model)
        {
            <tr>
                <td><p>@b.Id</p></td>
                <td><p>@b.Content</p></td>
            </tr>
        }
    </table>
</div>
